<!-- snippets/homepage-featured-products.liquid -->
<div id="homepage-products">
  <h2><span>{{ 'layout.homepage.products_title' | t }}</span></h2>

  {% if settings.homepage-collection == blank %}
  <div class="theme-instructions">
    <div class="onboard desktop-12 tablet-6 mobile-3">
      <h3>Home page - featured products</h3>
      You are seeing this message as you have enabled the Featured products section of your Home page options
      but have yet to choose a menu from the section titled: <strong>Home page - featured products</strong> and choose collection from the dropdown.
      <br /><br />
      To configure this section go to the <a href="/admin/themes/43760451/editor">theme Customizer</a> and open the section named: <strong>Home page - featured products</strong>.
      <br /><br />
      Need more help? take a look at our <a target="_blank" href="http://support.undergroundmedia.co.uk/customer/portal/articles/2466343-home-page---featured-products">tutorial</a>.
    </div>
    <div class="theme-content">
      <ul id="product-loop">
        {% for i in (1..4) %}
        {% assign products-per-row = settings.products-per-row %}
        <li class="product desktop-3 tablet-half mobile-half{% cycle ' first', '', '', ' last' %}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">     
          <div class="prod-image">
            <img src="//cdn.shopify.com/s/images/themes/product-{{ forloop.index }}.png" alt="{{ image.alt }}" />
          </div>
          <div class="product-info"> 
            <h3>Sample product title</h3>
            <div class="price">
              <div class="prod-price">9.99</div>
            </div>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endif %}    


  <ul id="product-loop" style="width: 100%">
    {% for product in collections[settings.homepage-collection].products limit: settings.homepage-product-limit %}
    <li class="product desktop-3 tablet-half mobile-half{% cycle ' first', '', '', ' last' %}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">     
      {% include 'product-listing' %}
    </li>
    {% endfor %}
  </ul>	        

</div>
<div class="clear"></div>